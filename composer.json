{
    "name": "becklyn/utilities",
    "description": "Various utility classes used in Becklyn projects too small for their own libraries",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Marko Vujnovic",
            "email": "mv@becklyn.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "symfony/string": "^5.0",
        "tightenco/collect": "^7.4"
    },
    "require-dev": {
        "phpspec/prophecy-phpunit": "^2.0",
        "phpunit/phpunit": "^9.1"
    },
    "autoload": {
        "psr-4": {
            "Becklyn\\Utilities\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Becklyn\\Utilities\\Tests\\": "tests/"
        }
    }
}
